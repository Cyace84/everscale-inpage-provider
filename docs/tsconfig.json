{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],

    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
    //"jsxImportSource": "vue"
  },
  "include": [".vitepress/components/**/*"],
  "exclude": ["node_modules", "dist", ".vitepress/cache"]
}
